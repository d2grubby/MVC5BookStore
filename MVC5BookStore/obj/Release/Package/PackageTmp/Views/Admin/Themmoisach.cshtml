@model MVC5BookStore.Models.SACH

@{
    ViewBag.Title = "Themmoisach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Thêm mới sách</title>
<center>
    <h3>THÊM MỚI</h3>
</center>
    @using (Html.BeginForm("Themmoisach", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="padding: 10px 0 0 10px">
        Tên sách:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding: 10px 0 0 10px">
        Đơn vị tính:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Donvitinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Donvitinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding: 10px 0 0 10px">
        Đơn giá:
        <div class="col-md-10">
            @Html.EditorFor(model => model.Dongia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Dongia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding: 10px 0 0 10px">
        Mô tả:
        <div class="col-md-10" style="padding: 0 20px 0 0">
            <textarea name="Mota">Mô tả thông tin sách</textarea>
        </div>
    </div>

    <div class="form-group" style="padding: 10px 0 0 10px">
        Ảnh bìa:
        <div class="col-md-10">
            <input type="file" name="fileupload" />
            @*thong bao trung*@
            @ViewBag.Thongbao
        </div>
    </div>

    <div class="form-group" style="padding: 10px 0 0 10px">
        Mã chủ đề:
        <div class="col-md-10">
            @Html.DropDownList("MaCD")
        </div>
    </div>

    <div class="form-group" style="padding: 10px 0 0 10px">
        Mã NXB:
        <div class="col-md-10">
            @Html.DropDownList("MaNXB")
        </div>
    </div>

    <div class="form-group" style="padding: 10px 0 0 10px">
        Ngày cập nhật:
        <div class="col-md-10">
            <input type="date" name="Ngaycapnhat" />
            @Html.ValidationMessageFor(model => model.Ngaycapnhat)
        </div>
    </div>
    <p></p>
    <hr />
    <p></p>
    <div class="form-group">
        <center>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" style="font-size:16px ; background-color:forestgreen; color:white ;padding: 5px 20px 5px 20px; font-weight:bold" /> |
                <font size="4">
                    @Html.ActionLink("Quay về", "Sach", "Admin")
                </font>
                <p></p>
            </div>
            </center>
    </div>
</div>
    }