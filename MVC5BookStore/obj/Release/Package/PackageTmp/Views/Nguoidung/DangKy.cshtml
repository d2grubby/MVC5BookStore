
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<title>Đăng ký</title>
<table align="center">
    <h2 style="text-align:left; font-weight:bold">Đăng ký thành viên</h2>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng: </td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ khách hàng: </td>
            <td>
                @Html.TextBox("DiachiKH")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại khách hàng: </td>
            <td>
                @Html.TextBox("DienthoaiKH")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu: </td>
            <td>
                @Html.TextBox("MatKhau")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu: </td>
            <td>
                @Html.TextBox("Matkhaunhaplai")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh: </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td>Giới tính: <br />Nam(True) | Nữ(False)</td>
            <td>
                @Html.TextBox("Gioitinh")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email: </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi8"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" style="font-size:16px; background-color:forestgreen; color:white ;padding: 5px 20px 5px 20px; font-weight:bold"/>
            </td>
        </tr>
    }
</table>

