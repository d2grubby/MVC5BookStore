
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<title>Đăng nhập</title>
<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<table align="=center">
    <h2 style="text-align:left; font-weight:bold">Đăng nhập khách hàng</h2>
    <hr />
    @using (Html.BeginForm())
    {

        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>

        <tr style="height:40px">
            <td align="right">   Mật khẩu: </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>

        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" style="font-size:16px ; background-color:forestgreen; color:white ;padding: 5px 20px 5px 20px; font-weight:bold" />
            </td>
        </tr>
    }
</table>

